<Window x:Class="Marubo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marubo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<ListView Margin="10" Name="lvTest">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Product Name" Width="120" DisplayMemberBinding="{Binding ProductName}" />
                    <GridViewColumn Header="Packaging" Width="120" DisplayMemberBinding="{Binding Packaging}"/>
				</GridView>
			</ListView.View>
		</ListView>
    </Grid>
</Window>
