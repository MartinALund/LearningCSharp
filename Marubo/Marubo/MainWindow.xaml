<Window x:Class="Marubo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marubo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="20" >

        <Label Content="Sparta DB" HorizontalAlignment="Center" FontSize="24" 
               Margin="10" DockPanel.Dock="Top" FontFamily="/SpartaGUI;component/Fonts/#Open Sans SemiBold" Foreground="White"/>
        <UniformGrid Columns="1" Margin="5" DockPanel.Dock="Left" Width="150">
            <Button x:Name="BtnCompanies" Style="{DynamicResource MenuButton}" Content="Companies" Click="Btn_OnClick"/>
            <Button x:Name="BtnCustomers" Style="{DynamicResource MenuButton}" Content="Customers" Click="Btn_OnClick"/>
            <Button x:Name="BtnEmployees" Style="{DynamicResource MenuButton}" Content="Employees" Click="Btn_OnClick"/>
            <Button x:Name="BtnOrders" Style="{DynamicResource MenuButton}" Content="Orders" Click="Btn_OnClick"/>
            <Button x:Name="BtnProducts" Style="{DynamicResource MenuButton}" Content="Products" Click="Btn_OnClick"/>
        </UniformGrid>

        <ContentControl x:Name="ContentArea" />
    </DockPanel>
</Window>
