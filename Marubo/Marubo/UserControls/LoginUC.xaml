<UserControl x:Class="Marubo.UserControls.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Marubo.UserControls"
             xmlns:utils="clr-namespace:Marubo.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <AdornerDecorator>
            <TextBox x:Name="TbEmail" Padding="10" Text="" MinWidth="250" HorizontalAlignment="Center">
                <utils:WatermarkService.Watermark>
                    <TextBlock>Email</TextBlock>
                </utils:WatermarkService.Watermark>
            </TextBox>
        </AdornerDecorator>

        <AdornerDecorator>
            <PasswordBox x:Name="PbPassword" Padding="10" MinWidth="250" HorizontalAlignment="Center">
                <utils:WatermarkService.Watermark>
                    <TextBlock>Password</TextBlock>
                </utils:WatermarkService.Watermark>
            </PasswordBox>
        </AdornerDecorator>
        
        <Button x:Name="btnLogin" Content="Log ind" Style="{StaticResource AuthWindowButton}" Margin="0,10,0,0" MinWidth="250" HorizontalAlignment="Center" Click="BtnLogin_Click"/>
    </StackPanel>
</UserControl>
