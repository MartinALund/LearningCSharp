<Window x:Class="Marubo.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marubo"
        xmlns:utils="clr-namespace:Marubo.Utils"
        mc:Ignorable="d"
        Title="AuthenticationWindow" MinHeight="625" MinWidth="300" Height="625" Width="400" MaxHeight="625" MaxWidth="400"
        Background="{StaticResource MainBackgroundColor}"
        FontFamily="{StaticResource MaterialDesignFont}">
    <StackPanel Margin="20">
        <Image x:Name="ImageMarubo" Source="Assets/Marubo.PNG" Height="100" Width="350" HorizontalAlignment="Center" />
        <utils:FadingContentControl x:Name="ContentArea">
        </utils:FadingContentControl>
    </StackPanel>
</Window>

    
    