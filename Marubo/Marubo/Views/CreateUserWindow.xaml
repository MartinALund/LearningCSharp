<Window x:Class="Marubo.Views.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marubo.Views"
        mc:Ignorable="d"
        Title="CreateUserWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="tbFirstName" Text="Fornavn"/>
            <TextBox x:Name="tbLastName" Text="Efternavn"/>
            <TextBox x:Name="tbAdress" Text="Adresse"/>
            <TextBox x:Name="tbZip" Text="Postnummer"/>
            <TextBox x:Name="tbPhone" Text="Telefon"/>
            <TextBox x:Name="tbEmail" Text="Email"/>
            <PasswordBox x:Name="tbPassword"/>
            <Button x:Name="btnConfirmUser" Content="Opret bruger" Click="btnConfirmUser_Click"/>
        </StackPanel>       
    </Grid>
</Window>
